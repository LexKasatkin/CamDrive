<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/toolbar"
    android:id="@+id/linearLayout"
    android:layout_alignParentBottom="true"
    android:background="@color/colorBackground">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardElevation="4dp"
        android:elevation="4dp"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="?android:selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/rl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvObjectID"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvObjectName"
                android:textColor="@color/colorPrimaryText"
                android:textSize="13sp"
                android:layout_alignTop="@+id/tvObjectID"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvContractName"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@+id/tvObjectName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvContractID"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignBottom="@+id/tvContractStatusName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvContractStatusName"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@+id/tvContractName"
                android:layout_alignLeft="@+id/tvContractName"
                android:layout_alignStart="@+id/tvContractName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:layout_above="@+id/tvContractStatusName"
                android:layout_centerHorizontal="true"
                android:textIsSelectable="false"
                android:textSize="13sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
